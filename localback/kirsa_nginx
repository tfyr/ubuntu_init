upstream django_kirsa {
    server unix:///home/pos/kirsa/kirsa.sock;
}

upstream kirsa_pos {
    server unix:///home/pos/kirsa-pos/kirsa-pos.sock;
}

upstream kirsa_kkmpos {
    server unix:///home/pos/kirsa-kkmpos/kirsa-kkmpos.sock;
}

server {
    listen 80;
    listen [::]:80;

    server_name localhost;
    charset     utf-8;

    client_max_body_size 15M;

    access_log  /var/log/nginx/kirsa.access.log;
    error_log   /var/log/nginx/kirsa.error.log;

    gzip on;
    gzip_disable "msie6";
    gzip_comp_level 5;
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript;

    set $envpkgs /home/pos/kirsa/env/lib/python3.10/site-packages;

    location /static {
        alias /home/pos/kirsa/static;
    }

    root /var/www/kirsa-front;

    location /pos {
        try_files $uri $uri/ /pos.html =404;
    }

    location / {
        index  index.html;
        try_files $uri $uri/ /index.html =404;
    }

    location ~ ^/kirsa-pos {
        proxy_pass http://kirsa_pos;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    location ~ ^/(kirsa-kkmpos) {
        proxy_pass http://kirsa_kkmpos;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location ~ ^/(graphql|admin|loginas|file|log) {
        proxy_set_header Host $host;
        proxy_pass http://django_kirsa;
        # proxy_pass http://xxx:8090;
        proxy_connect_timeout       300;
        proxy_send_timeout          300;
        proxy_read_timeout          300;
        send_timeout                300;
    }
}
